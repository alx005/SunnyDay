<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>

    </style>

    <!-- Work around for surface color -->
    <style name="TextFieldTransparent" parent="Widget.Design.TextInputLayout">
        <item name="colorSurface">@android:color/transparent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorOnPrimary">#212121</item>
        <item name="colorError">#FFEB3B</item>
        <item name="colorOnError">#212121</item>
        <item name="colorSurface">#212121</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="android:colorPrimary">#212121</item>

</style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">#212121</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">#212121</item>
    </style>

    <style name="AppThemeDark.AppBarOverlay" parent="AppThemeDark">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="AppThemeDark.PopupOverlay" parent="AppThemeDark">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

</resources>
